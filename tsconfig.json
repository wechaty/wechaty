{
  "extends": "@chatie/tsconfig",
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental",
  },
  "compilerOptions": {
    "outDir": "dist/esm",
    "lib": ["ESNext", "DOM"],
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/",
  ],
  "include": [
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts",
  ],
}
